<% content_for :title, @member.dig(:name)%>
<p class="text-gray-700 text-base">
  <div class="block rounded-lg bg-white shadow-secondary-1 dark:bg-surface-dark">
    <a href="#!">
      <img class="rounded-t-lg" src="<%=@member.dig(:image)%>" alt=""/>
    </a>
    <div class="p-6 text-surface dark:text-white">
      <h5 class="mb-2 text-xl font-medium leading-tight"><%=@member.dig(:name)%></h5>
      <p class="mb-4 text-base">
        <%=@member.dig(:email)%>
        <p class="text-sm/6 text-gray-900"><%=@member.dig(:role)%></p>
        <p class="mt-1 text-xs/5 text-gray-500">Last seen <%=@member.dig(:active_at)%></p>
        <p class="text-sm/6 text-gray-900 pt-5">
          <a href="<%=root_path%>" class="bg-blue-500 hover:bg-blue-600 text-white py-1 px-3 rounded">
            Members List
          </a>
        </p>
      </p>
    </div>
  </div>
</p>